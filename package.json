{
  "name": "zentavo-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && npx tsc",
    "test": "jest --runInBand",
    "test:staged": "jest --passWithNoTests --silent --findRelatedTests",
    "lint": "eslint",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "lint-staged": "lint-staged",
    "format": "prettier --write \"src/**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json,md}\"",
    "start": "node dist/app.js",
    "start:prod": "npx prisma migrate deploy && node dist/app.js",
    "migrate:prod": "npx prisma migrate deploy",
    "dev": "ts-node-dev --respawn --transpile-only --clear --files -r tsconfig-paths/register src/app.ts",
    "debug-controller": "node scripts/debug-controllers.js",
    "prepare": "husky || true"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
