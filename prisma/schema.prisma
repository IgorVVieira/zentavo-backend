generator client {
  provider   = "prisma-client"
  output     = "../src/generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String              @id @default(uuid()) @db.Uuid
  email              String              @unique
  name               String
  password           String
  status             String              @default("PENDING_VERIFICATION")
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  deletedAt          DateTime?           @map("deleted_at")
  categories         Category[]
  transactions       Transaction[]
  verificationTokens VerificationToken[]
  subscriptions      Subscription[]

  @@map("users")
}

model Category {
  id           String        @id @default(uuid()) @db.Uuid
  userId       String        @map("user_id") @db.Uuid
  name         String
  color        String
  type         String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  deletedAt    DateTime?     @map("deleted_at")
  user         User          @relation(fields: [userId], references: [id])
  transactions Transaction[]

  @@index([userId], name: "category_user_id_index")
  @@map("categories")
}

model Transaction {
  id          String    @id @default(uuid()) @db.Uuid
  userId      String    @map("user_id") @db.Uuid
  categoryId  String?   @map("category_id") @db.Uuid
  externalId  String?   @map("external_id") @db.Uuid
  amount      Float
  date        DateTime
  description String
  type        String
  method      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime? @map("deleted_at")
  user        User      @relation(fields: [userId], references: [id])
  category    Category? @relation(fields: [categoryId], references: [id])

  @@index([userId], name: "transaction_user_id_index")
  @@index([categoryId], name: "category_id_index")
  @@map("transactions")
}

model VerificationToken {
  id             String    @id @default(uuid()) @db.Uuid
  userId         String    @map("user_id") @db.Uuid
  token          String    @unique
  expirationDate DateTime
  type           String
  isUsed         Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  deletedAt      DateTime? @map("deleted_at")

  user User @relation(fields: [userId], references: [id])

  @@map("verification_tokens")
}

model Product {
  id               String @id @default(uuid()) @db.Uuid
  gatewayProductId String @map("gateway_product_id") @db.Uuid
  name             String @map("name")
  description      String @map("description")
  price            Float  @map("price")
  features         Json   @map("features")
  durationInDays   Int    @map("duration_in_days")

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  deletedAt     DateTime?      @map("deleted_at")
  subscriptions Subscription[]
}

model Subscription {
  id        String    @id @default(uuid()) @db.Uuid
  userId    String    @map("user_id") @db.Uuid
  productId String    @map("product_id") @db.Uuid
  startAt   DateTime  @map("start_at")
  endAt     DateTime  @map("end_at")
  price     Float     @map("price")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime? @map("deleted_at")

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@map("subscriptions")
}

